<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tfgp2p.tfg_p2p_nsp.MainActivity"
    android:columnCount="1">

    <GridLayout
        android:layout_height="75dp"
        android:layout_width="match_parent"
        android:columnCount="5"
        android:id="@+id/tabbar_layout">

        <LinearLayout
            android:id="@+id/tabbar_tabinicio_layout"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:orientation="vertical"
            android:background="@drawable/tabbar_background_default">
            <ImageView
                android:id="@+id/tabbar_tabinicio_image"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tabbar_tabinicio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_tabbar_inicio"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tabbar_tabficheros_layout"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_row="1"
            android:orientation="vertical"
            android:background="@drawable/tabbar_background_default">
            <ImageView
                android:id="@+id/tabbar_tabficheros_image"
                android:src="@drawable/ic_folder_shared_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tabbar_tabficheros_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_tabbar_ficheros"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tabbar_tabamigos_layout"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_row="1"
            android:orientation="vertical"
            android:background="@drawable/tabbar_background_default">
            <ImageView
                android:id="@+id/tabbar_tabamigos_image"
                android:src="@drawable/ic_people_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tabbar_tabamigos_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_tabbar_amigos"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tabbar_tabopciones_layout"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="4"
            android:layout_row="1"
            android:orientation="vertical"
            android:background="@drawable/tabbar_background_default">
            <ImageView
                android:id="@+id/tabbar_tabopciones_image"
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tabbar_tabopciones_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_tabbar_opciones"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </GridLayout>

    <FrameLayout
        android:id="@+id/main_content_layout"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabbar_layout"
        android:background="#666666"></FrameLayout>

</RelativeLayout>
